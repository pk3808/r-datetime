{
    "compilerOptions": {
      "jsx": "react-jsx",
      "target": "ES5",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "noEmit": false,
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "example", "**/*.test.ts", "**/*.test.tsx"]
  }
  